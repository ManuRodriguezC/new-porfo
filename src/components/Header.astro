---
import './styles/nav.css'
---

<header id="header" class="justify-center items-center py-8 w-[70%] xl:w-[1120px] md:flex mx-auto">
    <nav class="flex flex-col justify-center items-center gap-x-10 gap-10 opacity-90">
        <button id="button" class="burger block md:hidden mt-6"></button>
        <ul id="list" class="hidden md:flex flex-row justify-center items-center gap-6 z-1">
            <li>
                <a class="hover:scale-105 text-white/80 hover:text-white" href="#top">Inicio</a>
            </li>
            <li>
                <a class="hover:scale-105 text-white/80 hover:text-white" href="#experiencia">Experiencia</a>
            </li>
            <li>
                <a class="hover:scale-105 text-white/80 hover:text-white" href="#projects">Proyectos</a>
            </li>
            <li>
                <a class="hover:scale-105 text-white/80 hover:text-white" href="#education">Educación</a>
            </li>
            <li>
                <a class="hover:scale-105 text-white/80 hover:text-white" href="#sobre-mi">Sobre mí</a>
            </li>
            <li>
                <a class="hover:scale-105 text-white/80 hover:text-white" href="#skills">Skills</a>
            </li>
        </ul>
    </nav>
</header>

<script>
        const button = document.getElementById('button');
        const list = document.getElementById('list');

        button?.addEventListener('click', () => {
            list?.classList.toggle('new');
            button?.classList.toggle('cruz')
        });
</script>